<form method="POST" class="mt-5" enctype="multipart/form-data">
  <div class="form-group">
    <label for="inputTitle">Название</label>
    <input
      type="text"
      value="<%= books.title %>"
      name="title"
      class="form-control"
      id="inputTitle"
    />
  </div>

  <div class="form-group">
    <label for="inputDesc">Описание</label>
    <textarea rows="3" name="description" class="form-control" id="inputDesc">
<%= books.description %></textarea
    >
  </div>

  <div class="form-group">
    <label for="inputAuthor">Автор</label>
    <textarea rows="3" name="authors" class="form-control" id="inputAuthor">
<%= books.authors %></textarea
    >
  </div>

  <div class="form-group">
    <label for="inputFileBook">Файл</label>
    <input
      type="file"
      value="<%= books.fileBook %>"
      name="fileBook"
      class="form-control"
      id="inputFileBook"
    />
  </div>

  <div class="form-group text-right">
    <button type="submit" class="btn btn-primary">Сохранить</button>
  </div>
</form>
