<%- include('../port/layout-start', {title: title}) %>
<%- include('../port/menu') %>

<h1><%= title %></h1>

<div class="row">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-body">

                <h5 class="card-title">Название: <%= books.title %></h5>
                <p class="card-text">Описание: <%= books.description %></p>
                <p class="card-text">Автор: <%= books.authors %></p>
                <p class="card-text">Файл: <%= books.fileName %></p>
                <p class="card-text">Просмотров: <%= cntr %></p>

                <div class="text-right">
                    <form action="/books/<%= books.id %>/download" method="GET" class="d-inline">
                        <button class="btn btn-sm btn-success">
                            <i class="fa fa-arrow-down" aria-hidden="true"></i>
                        </button>
                    </form>
                    <a class="btn btn-sm btn-primary" href="/books/update/<%= books.id %>">
                        <i class="fa fa-pencil" aria-hidden="true"></i>
                    </a>
                    <form action="/books/delete/<%= books.id %>" method="POST" class="d-inline">
                        <button class="btn btn-sm btn-danger">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </button>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

<%- include('../port/layout-end') %>